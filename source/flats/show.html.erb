
<% flat = data.flats[owner] %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>'); height: 50vh; background-position: center;">
</div>

<div class="container">
  <div class="content">
    <div class="flat-container">
      <div class="profile text-center">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle avatar" %>
        <p><%= owner %></p>
      </div>
      <div class="flat-desc">
        <h2><%= flat.description %></h2>
        <p><%= flat.city_name %></p>
        <div>
          <% stars = flat.rating %>
          <% stars.times do%> <i class="fas fa-star yellow"></i> <% end %>
          <% (5-stars).times do %><i class="fas fa-star lightgray"></i> <% end %>
        </div>
      </div>
    </div>
    <div class="book-container">
      <form class="form-inline">
        <div class="form-group">
          <label for="checkin">From</label>
          <input type="date" class="form-control" id="checkin" placeholder="Check-In">
        </div>
        <div class="form-group">
          <label for="checkout">to</label>
          <input type="date" class="form-control" id="checkout" placeholder="Check-Out">
        </div>
      </form>
      <form>
        <select class="form-control form-group">
          <option value="1-guest">1 guest</option>
          <option value="2-guest">2 guests</option>
          <option value="3-guest">3 guests</option>
        </select>
        <button type="submit" class="btn btn-default btn-primary">Book now</button>
      </form>
    </div>
  </div>
</div>

<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h3>About this flat</h3>
        <p><%= flat.text %></p>
      </div>
    </div>
    <div class="row">
      <div class="row-spe">
        <div class="col-xs-2 small-text">
          <p>The Space</p>
        </div>
        <div class="col-xs-4 small-text">
          <p>Accomodates: 2</p>
          <p>Bathrooms: 1</p>
          <p>Bed type: Real Bed</p>
          <p>Bedrooms: 1</p>
        </div>
        <div class="col-xs-4 small-text">
          <p>Beds: 1</p>
          <p>Property type: 1</p>
          <p>Room type: Entire home/apt</p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="row-spe">
        <div class="col-xs-2 small-text">
          <p>Amenities</p>
        </div>
        <div class="col-xs-4 small-text">
          <p><i class="fas fa-utensils"></i>  Kitchen</p>
          <p><i class="fas fa-wifi"></i>  Wifi</p>
        </div>
        <div class="col-xs-4 small-text">
          <p><i class="fas fa-tv"></i>  TV</p>
          <p><i class="fas fa-glass-martini"></i>  Welcome drinks</p>
        </div>
      </div>
    </div>
  </div>
</div>
